{
    "name": "igniterlabs/ti-ext-giftup",
    "type": "tastyigniter-package",
    "description": "Sell and accept gift cards on your TastyIgniter website using Gift Up!",
    "license": "MIT",
    "authors": [
        {
            "name": "Igniter Labs Team"
        }
    ],
    "keywords": [
        "tastyigniter",
        "giftup",
        "gift-card",
        "giftcard"
    ],
    "require": {
        "tastyigniter/core": "^v4.0",
        "tastyigniter/ti-ext-cart": "^4.0"
    },
    "require-dev": {
        "laravel/pint": "^1.2",
        "larastan/larastan": "^3.0",
        "sampoyigi/testbench": "dev-main as 1.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "rector/rector": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "IgniterLabs\\GiftUp\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IgniterLabs\\GiftUp\\Tests\\": "tests/"
        }
    },
    "extra": {
        "tastyigniter-extension": {
            "code": "igniterlabs.giftup",
            "name": "Gift Up! Gift Cards",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#fc0",
                "color": "#000000"
            },
            "homepage": "https://tastyigniter.com/marketplace/item/igniterlabs-giftup"
        },
        "branch-alias": {
            "dev-master": "4.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true,
            "composer/installers": true
        },
        "sort-packages": true
    },
    "scripts": {
        "test:lint": "vendor/bin/pint --test --ansi",
        "test:lint-fix": "vendor/bin/pint --ansi",
        "test:refactor": "vendor/bin/rector process --dry-run --ansi",
        "test:refactor-fix": "vendor/bin/rector process --ansi",
        "test:static": "vendor/bin/phpstan analyse --memory-limit=1056M --ansi",
        "test:static-fix": "vendor/bin/phpstan --generate-baseline --memory-limit=1056M --ansi",
        "test:pest": "vendor/bin/pest",
        "test:coverage": "vendor/bin/pest --coverage --exactly=100 --compact",
        "test:type-coverage": "vendor/bin/pest --type-coverage --min=100",
        "test": [
            "@test:lint",
            "@test:refactor",
            "@test:static",
            "@test:coverage"
        ]
    }
}
